<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_10"
    android:paddingTop="@dimen/dimen_10"
    android:paddingRight="@dimen/dimen_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/report_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="报告"
            android:textColor="@color/fontcolorblack"
            android:textSize="@dimen/font_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/report_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="@color/fontcolorlight"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/report_person_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交人："
                android:textColor="@color/fontcolorblack"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/report_device_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:text="设备名称："
                android:textColor="@color/fontcolorblack"
                android:textSize="@dimen/font_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/report_station_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="站名："
            android:textColor="@color/fontcolorblack"
            android:textSize="@dimen/font_12" />

        <TextView
            android:id="@+id/report_upload_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/title_bar_color"
            android:gravity="center"
            android:padding="@dimen/dimen_5"
            android:text="上传报告"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/title_bar_color" />


</LinearLayout>