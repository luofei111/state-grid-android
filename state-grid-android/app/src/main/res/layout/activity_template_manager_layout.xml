<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/template_manager_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="@string/template_manager"
        app:centerTextColor="@color/white"
        app:centerTextSize="18sp"
        app:centerType="textView"
        app:showBottomLine="false"
        app:statusBarColor="@color/title_bar_color"
        app:statusBarMode="light"
        app:titleBarColor="@color/title_bar_color" />

    <com.nx.stategrid.weiget.recycleview.BaseRecycleViewGrid
        android:id="@+id/template_manager_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10" />

</LinearLayout>